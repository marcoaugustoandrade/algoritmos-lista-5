programa
{
	const real dolar = 3.77
	
	funcao real converter_real_dolar(real valor)
	{
		retorne valor / dolar
	}

	funcao real converter_dolar_real(real valor)
	{
		retorne valor * dolar
	}
	
	funcao inicio()
	{
		escreva("10 reais em dólar é $ " + (converter_real_dolar(10.0)) + "\n")
		escreva("10 dólares em reais é R$ " + (converter_dolar_real(10.0)) + "\n")
	}
}
